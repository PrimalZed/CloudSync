<?xml version="1.0" encoding="utf-8" ?>
<Window 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="CloudSync.App.MainWindow">
	<StackPanel
		Padding="30,0"
		Spacing="25">

		<TextBlock HorizontalAlignment="Stretch" HorizontalTextAlignment="Center">Hello, World!</TextBlock>

		<TextBlock HorizontalAlignment="Stretch" HorizontalTextAlignment="Center">Welcome to .NET Multi-platform App UI</TextBlock>

		<!--Visibility?-->
		<TextBlock HorizontalAlignment="Stretch" HorizontalTextAlignment="Center">Sync Root Is Not Registered</TextBlock>
		<TextBlock HorizontalAlignment="Stretch" HorizontalTextAlignment="Center">Sync Root Is Registered</TextBlock>

		<Button HorizontalAlignment="Stretch" Command="{x:Bind RegisterCommand}">
			Register
		</Button>

		<Button HorizontalAlignment="Stretch" Command="{x:Bind UnregisterCommand}">
			Unregister
		</Button>
		<TextBlock HorizontalAlignment="Stretch" HorizontalTextAlignment="Center">{{ Error }}</TextBlock>
	</StackPanel>

</Window>
